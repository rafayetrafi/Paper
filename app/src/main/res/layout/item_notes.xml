<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#C3BDBD">
        
        <View
            android:id="@+id/view_Priority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:background="@drawable/red_dot"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_NotesTitle"
                android:text="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:maxLines="1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_NotesSubTitle"
                android:text="dummyasjdfnlsdkjfnlsdkjflsdkjflsdkjnfsjdknfsdnfsdnf.,msdnf.,smdnf.,msndf.,smdnf.,smdnf.smdnf.snfsd.mnf.sdmnf.sdmnf.sdmnf.sdnf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_NotesDate"
                android:text="02 August 2022"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textStyle="bold"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>